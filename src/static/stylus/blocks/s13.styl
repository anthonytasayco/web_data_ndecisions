.b13
  padding-bottom 53px
.b13-wraper
  display flex
  flex-wrap wrap

.b13-item
  width 50%
  box-sizing border-box
  padding-bottom 45px
  padding-top 45px
.b13-item:nth-child(2n+1)
  padding-right 15px
  text-align right
  padding-left 115px
  .b13-contentinfo
    display inline-block
    text-align left
.b13-item:nth-child(2n)
  padding-left 115px
  padding-right 15px
.b13-item:nth-child(3n+1)
  background #fafafb
  border-radius 10px
.b13-contentinfo
  padding-right 22px
  box-sizing border-box
  padding-top 23px
  padding-left 43px
  position relative
  max-width 470px
  width 100%
  height 247px
  border-radius 10px
  color c-1
  background c-5
  box-shadow 0px 1px 24px 4px rgba(197, 197, 197, 0.35)
  height auto
  padding-bottom 37px
  h3
    font-size 24px
    font-family t-1
    color c-0
  span
    font-size 14px
    font-family t-3
    color c-1
  &:before
    content ''
    position absolute
    width 34px
    height 33px
    background-image url('../media/32x32-2x.png')
    background-size cover
    background-position center 100%
    background-repeat no-repeat
    right 3px
    bottom 0
.b13-parrafo
  font-size 16px
  font-family t-2
  padding-top 22px
  color c-1
  position relative
  &:after
    content ''
    position absolute
    width 34px
    height 33px
    background-image url('../media/32x32-2x.png')
    background-size cover
    background-position center 100%
    background-repeat no-repeat
    left -16px
    top -5px
    display inline-block
    transform rotate(180deg)
    opacity 0.1
.b13-contentlogo
  position absolute
  left -102px
  border-radius 50%
  overflow hidden
  top 0
  height 128px
  max-width 128px
  width 100%
  box-shadow -5px 28px 38px -2px rgba(0, 0, 0, 0.13)
  img
    max-width 100%
    height auto

.b13-paginador
  display inline-block
  width 100%
  text-align center
.b13-page
  background c-5
  max-width 36px
  width 100%
  height 36px
  margin auto
  position relative
  border-radius 3px
  text-align center
  display inline-block
  a
    color #000000
    font-size 12px
    position absolute
    left 0
    right 0
    border 0
    bottom 0
    top 0px
    margin auto
    display block
    padding 10px
  &:hover
    transition all 400ms ease
    background c-0
    a
      color c-5
  &.active
      transition all 400ms ease
      background c-0
      a
        color c-5
.b13-links
  padding-top 6px
  padding-bottom 3px
  ul
    li
      display inline-block
      font-size 13px
      font-family t-3
      color #000000
      &:first-child
        &:before
          display none
      &:before
        content '\e606'
        font-family icomoon
        font-size 13px
        color c-1
      &.active
        font-weight bold
        color c-1

@media screen and (max-width 1024px)
  .b13-wraper
    text-align center
    justify-content space-around
  .b13-item
    transition all 400ms ease
    width 48%
    padding-left 10px
  .b13-item:nth-child(3n+1)
    background c-5
  .b13-item:nth-child(2n+1)
    text-align center
    padding-left 10px
    .b13-contentinfo
      text-align center
  .b13-contentinfo
    display inline-block
    text-align center
    padding-left 22px
    h3 
      margin-top -10px
  .b13-item:nth-child(2n)
    padding-left 10px
  .b13-contentlogo
    position relative
    left 0
    right 0
    margin auto
    top -61px
  .b13-item
    padding-bottom 40px
    padding-top 40px
  .b13
    padding 40px 0
  .b13-links 
    display none
@media screen and (max-width 800px)
  .b13-item 
    width 50%
@media screen and (max-width 768px)
  .b13 
    padding 30px 0 25px
@media screen and (max-width 700px)
  .b13-item
    width 100%
  .b13-contentinfo
    max-width 90%
@media screen and (max-width 480px)
  .b13
    padding-bottom 20px
  .b13-contentinfo
    padding 10px 20px
    max-width 100%
    h3 
      margin-top -20px
