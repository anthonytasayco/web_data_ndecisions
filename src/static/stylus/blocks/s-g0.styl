.g0-btn
	max-width 311px
	width 100%
	padding 0
	text-align center
	border-radius 5px
	transition all 400ms ease
	position relative	
	a
		width 100%
		font-family t-3
		font-size 16px
		color #ffffff
		display block
		// height 50px
		// padding 0px 10px 0px 10px
		// padding-left 30px
		height 50px
		line-height 50px
		display flex
		align-items center
		justify-content center
		align-items center
	i
		display block
		width 16px
		height 16px  
		background-color c-5
		border-radius 50%
		position relative
		left 17px
		// position: absolute;
		// margin-left: 18px;	
		&:before
			font-size 10px
			font-weight bold
			top: -2px;
			left 0.5px
			position: relative;
		// 	position relative
		// 	width 100%
		// 	height 16px
			// display: flex;
			// align-items: center;
			// justify-content: center;
	&.naranja
		background c-0
		i
			&:before
				color c-0
		@media screen and (min-width 1025px)
			&:hover
				transition all 400ms ease
				background c-1
				i
					&:before
						color c-1
	&.azul
		background c-1
		i
			&:before
				color c-1
		@media screen and (min-width 1025px)
			&:hover
				transition all 400ms ease
				background c-0
				i
					&:before
						color c-0
	i, span
		display inline-block
		vertical-align middle
