.g0-btnform
	max-width 137px
	width 100%
	padding 0
	text-align center
	border-radius 4px
	box-sizing border-box
	transition all 400ms ease
	background c-0
	a,input
		font-family t-3
		font-size 15px
		color #ffffff
		display block
		padding 15px 10px 15px 10px
		&:after
			content '\e904'
			font-family icomoon
			font-size 17px
			color #ffffff
			position relative
			top 2px
			left 13px
	@media screen and (min-width 1025px)
		&:hover
			transition all 400ms ease
			background #fff
			border 1px solid c-0
			a
				font-family t-3
				font-size 15px
				color c-0
			.icon-send
				&:before
					font-size 17px
					color c-0
				
@media screen and (max-width 480px)
	.g0-btn 
		 margin 0 auto
		 i 
			display none