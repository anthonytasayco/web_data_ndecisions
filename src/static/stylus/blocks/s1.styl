.b1
	font-size 0
	.bx-wrapper
		.bx-pager
			bottom 30px
			z-index 50
			text-align left
			width 96%
			left 0px
			right 0px
			max-width 1180px
			position absolute
			margin auto
			.bx-pager-item
				text-align left
			&.bx-default-pager
				a
					background-color white
					transition .3s all ease
					width 13px
					height 13px
					border-radius 50%
					&:hover,
					&.active
						background c-0
.b1-wrapper-contenedor
	box-sizing border-box
	background-position center center
	background-repeat no-repeat
	background-size cover
	height 570px
	position relative
	&:before
		content ''
		position absolute
		width 100%
		height 100%
		left 0
		top 0
		background rgba(c-1,0.5)
		background linear-gradient(to right, rgba(0,27,54,0.82) 0%, rgba(227,230,233,0.44) 56%, rgba(255,255,255,0.44) 63%)
		background linear-gradient(to right, rgba(0,27,54,0.81) 0%, rgba(195,198,201,0) 56%, rgba(219,219,219,0) 63%)
		z-index 2
	
.b1-texto
	display table-cell
	vertical-align bottom
	height 570px
	width 2000px
	position relative
	bottom 85px
	z-index 3
	h3
		margin 0
		color #fff
		font-size 48px
		font-family t-4
		line-height 1.2
		max-width 410px
		position relative
		bottom 20px
@media screen and (max-width 768px)
	.b1-wrapper-contenedor
		height 435px
	.b1-texto
		height 435px
		bottom 56px
		h3
			font-size 40px
			max-width 270px
			bottom 22px
	.b1 
		.bx-wrapper
			.bx-pager 
				bottom 25px
@media screen and (max-width 480px)
	.b1-texto
		bottom 54px
		h3
			margin-bottom -3px
			font-size 30px
			max-width 100%
			text-align center
	.b1 
		.bx-wrapper
			.bx-pager
				text-align center
				bottom 24px