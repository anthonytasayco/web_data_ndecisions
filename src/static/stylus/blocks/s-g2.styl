.g2-inputs
  max-width 570px
  width 100%
  height 50px
  position relative
  border-radius 8px
  transition all 400ms ease
  input
    font-size 15px
    font-family t-3
    color #666666
    max-width 570px
    width 100%
    height 50px
    padding-left 17px
    box-sizing border-box
    border 0px
    border-radius 8px
    box-shadow -2px 2px 9px 0px rgba(162,162,162,0.39) inset
  &:hover
    border 0px
    box-shadow 0px 1px 4px 2px #EF7A13
    transition all 400ms ease
    input
      border 1px solid c-0
      border 0px
