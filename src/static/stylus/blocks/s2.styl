.b2
  padding 53px 0 63px
  .g1-block
    max-width 100%
.b2-titulo
  width 100%
  text-align center
  margin-bottom 32px
.b2-wraper
  using-flex(row, flex-start, flex-start)
  position relative
  &:before, &:after
    content ''
    width 100%
    height 1px
    background-color #fbe4cc
    position absolute
    left 0
  &:before
    top 0
  &:after
    bottom 0
.b2-item-servicios
  width 25%
  display inline-block
  margin 0
  @media screen and (min-width 1025px)
    &:nth-child(4n + 4)
      .g1-block
        border-right 0
  @media screen and (min-width 769px) and (max-width 1024px)
    &:nth-child(3n + 3)
      .g1-block
        border-right 0
  @media screen and (min-width 481px) and (max-width 768px)
    &:nth-child(2n + 2)
      .g1-block
        border-right 0
  @media screen and (max-width 480px)
    &:nth-child(1n + 1)
      .g1-block
        border-right 0
.b2-row-button
  margin-top 55px
  .wancho
    using-flex(row, center, center)
.b2-servicios-listado
  padding 65px 0 55px
.b2
  .b2-wraper 
    border 0
  .g1-block 
    border 0
    border-right 1px solid rgba(235,121,0,0.2)
    border-bottom 1px solid rgba(235,121,0,0.2)
    @media screen and (min-width 1025px)
      &:hover 
        border-left 0
        border-bottom 0
  .g1-linkdetalle
    h6
      color white
      position relative
      top -3px
      &:after
        top 2px
@media screen and (max-width 1024px)
  .b2-item-servicios
    transition all 400ms ease
    width 33.333333%
  .b2 
    .g1-block 
      background transparent
    .g1-linkdetalle
      h6 
        color c-0
        &:after
          background-color c-0
          color white
@media screen and (max-width 768px)
  .b2
    margin-top 0
    padding 30px 0 40px
  .b2-titulo
    margin-bottom 37px
    h1
      font-size 25px
  .b2-item-servicios
    transition all 400ms ease
    width 50%
  .b2-servicios-listado
    padding 30px 0 30px
  .b2-row-button
    margin-top 30px
@media screen and (max-width 480px)
  .b2
    margin-top 0
    padding 33px 0 40px
  .b2-titulo
    margin-bottom 35px
    h1
      font-size 20px
  .b2-item-servicios
    transition all 400ms ease
    width 100%
