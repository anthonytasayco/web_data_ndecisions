.b14
	height calc(100vh - 206px)
	display flex
	align-items: center;	
	.wancho
		text-align: center;
	.g0-btn 
		.icon-flecha-btn
			transform rotate(180deg)
			&:before
				top -3px
						
.b14-bloque
	h2
		font-family t-1
		font-size 140px
		color #ef7a12
		margin-bottom 0
		// padding-bottom 35px
		padding-bottom 4px
	span
		font-family t-1
		font-size 30.16px
		color #ef7a12
		border-bottom  1px solid #fbf0e5
	p
		margin-bottom 0px
		padding-bottom 38px
		padding-top 97px
		&:nth-of-type(1)
			font-family t-3
			font-size 14px
			color #4d4f53
		
.b14-link
	text-align center
	.g0-btn
		display inline-block
		height 50px
		width 195px
@media screen and (max-width 1024px)
	.b14-bloque
		h2 
			font-size 90px
@media screen and (max-width 960px)
	.b14
		.b14-bloque
			h2 
				font-size 80px
@media screen and (max-width 768px)
	.b14
		.b14-bloque
			h2 
				font-size 70px
			p 
				&:nth-of-type(1)
					padding-top 40px
@media screen and (max-width 640px)
	.b14
		height auto
		padding-top 45px
		padding-bottom 45px	
		.b14-bloque 
			h2
				font-size 60px
			p
				&:nth-of-type(1)
					padding-top 20px
					padding-bottom 20px
@media screen and (max-width 420px)
	.b14
		.b14-bloque 
			h2
				font-size 50px
			span
				font-size 22px
@media screen and (max-width 390px)
	.b14
		.b14-bloque 
			h2
				font-size 40px
			span
				font-size 20px
			
@media screen and (max-width 320px)
	.b14
		.b14-bloque
			h2
				font-size 30px
			span
				font-size 18px
			
		
		

	
	