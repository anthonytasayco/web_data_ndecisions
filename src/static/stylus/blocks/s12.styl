@media screen and (max-width 1024px)
	.b12-wrap-imagen
		width 90%
		max-width 90%
	.b12-redes
		justify-content flex-end
@media screen and (max-width 960px)
	.b12-wrap-imagen
		max-width 570px
	.b12-redes 
		&:before
			width 100%
@media screen and (max-width 800px)
	.b12-contacto, .b12-correos
		// margin-top 10px
		width 100%
		
	.b12
		display block
	.b12-center
		&.b12-left
			max-width 100%
			width 100%
			padding 0 15px
	.b12-wrap-imagen
		width 100%
		// max-width 460px
		max-width 100%
		padding 0 15px
		text-align center
		.email 
			&:after
				right 35%
				// transform translateX(-50%)
	.b12-correos
		padding 30px 0
	.b12-contacto
		padding 30px 0 15px
	.b12-redes
		justify-content center
		a 
			margin 0
		&:before
			width 90%
			left 50%
			transform translateX(-50%)
	.b12-row-tel
		a 
			font-size 20px
@media screen and (max-width 480px)
	.b12-wrap-imagen
		max-width 100%
		span 
			font-size 20px
	.b12-contacto, .b12-correos
		padding 15px 0
	.b12-title
		h3
			font-size 20px
	.b12-redes
		p
			display block
			padding 5px 0
		a
			padding-left 10px
			padding-right 0
	.b12-iconos
		padding 10px
	.b12-row-tel
		a 
			font-size 18px
@media screen and (max-width 375px)
	.b12-redes
		a 
			padding-left 0
			width 50%
			padding 0 15px
			box-sizing border-box
			&:nth-of-type(1)
				text-align right 
			&:nth-of-type(2)
				text-align left