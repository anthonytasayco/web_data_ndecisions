.b9
	font-size 0
	.b7Miga
		margin-bottom 80px
		padding-top 6px
.b9-wrapper
	// border 1px solid red
	box-sizing border-box
	
.b9-wrap-contenedor
	// display flex
	// align-items flex-end
	// justify-content space-around
	display table-cell
	width 2000px
	vertical-align top
	height 440px
	background rgba(#ccc,0.4)
	// border 1px solid green
	box-sizing border-box
	position relative
	.wancho
		max-width 1000px
.b9-figure
	position absolute
	right 0
	top 0
	bottom 0
	width 50%
	// width 58%
	// height 100%
	img
		max-width 100%
		height auto
		display block
		
.b9-medium
	max-width 440px
	padding-bottom 60px
	// padding-left 110px
	h3
		margin 0
		font-size 30px
		font-family t-1
		line-height 1.17
		color c-0
		margin-top -15px
	p, li
		font-size 16px
		font-family t-3
		line-height 1.2
		color c-1
	p
		margin 0
		padding-top 19px
	ul, ol
		padding-left 18px
		margin-top 20px
		li 
			padding-left 2px
			margin-bottom 10px 
			&:last-child 
				margin-bottom 0
	ul 
		li 
			list-style: disc;
	ol 
		li 	
			list-style: decimal;
	img
		max-width 100%
		height auto
		background #fff
		position relative
		top -36px
		// border 1px solid blue
		box-sizing border-box
		display inline-block

.b9-imagen
	background-position center center
	background-repeat no-repeat
	background-size cover
	position relative
	height 458px
	width 100%
	
@media screen and (max-width 1024px)
	.b9 
		padding-top 60px
		.b7Miga
			margin-bottom 40px
	.b9-figure 
		width 43%
	.b9-medium
		max-width 500px
@media screen and (max-width 960px)
	.b9-imagen
		background-size 100%
		height 0
		padding-bottom 60%
	.b9-figure
		position relative
		max-width 100%
		width 100%
	.b9-wrap-contenedor
		position relative
		max-width 100%
		// width 100%
		height auto
	.b9-medium
		max-width 100%
		padding-left 0
		padding-bottom 0
		h3 
			font-size 25px
@media screen and (max-width 780px)
	.b9-medium
		padding-bottom 20px
		h3
			font-size 20px
	.b9
		.b7Miga
			margin-bottom 30px

@media screen and (max-width 768px)
	.b9-imagen
		padding-bottom 55%
	.b9 
		padding-top 50px
	.b9-medium
		img 
			width 60px
			top -25px
@media screen and (max-width 480px)
	.b9 
		padding-top 40px
	.b9-medium
		h3
			font-size 18px
		p
			font-size 15px
		img 
			width 55px
	.b9-imagen 
		padding-bottom 63%
		
