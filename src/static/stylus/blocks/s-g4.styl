.block-banner
	overflow hidden
	width 100%
	position relative
	height 132px
	background-image url("../media/1080x132-1.png");
	background-position-x: 100%;
	z-index: 1;
	background-repeat no-repeat
	&:before
		content ""
		background-image url("../img/1920x132 _filtro.png");
		position absolute
		background-repeat no-repeat
		width: 100%;
		left 0px
		top 0px
		height: 132px;
		
	h1
		font-family t-4
		color c-5
		font-size 48px
		z-index 2
		position relative
		width 100%
		line-height 100%
	.wancho
		height: 132px;
		display: flex;
		justify-content: left;
		align-items: center;

@media screen and (max-width 1350px)
	.block-banner
		&:before	
			background-position-x: 60%;
@media screen and (max-width 1024px)
	.block-banner
		h1 
			font-size 40px
@media screen and (max-width 768px)
	.block-banner
		&:before	
			background-position-x: 70%;
		h1 
			font-size 32px
@media screen and (max-width 490px)
	.block-banner 
		height 115px
		&:before
			height 115px
		.wancho		
			height 115px			
		h1
			font-size 30px
			
@media screen and (max-width 375px)
	.block-banner 
		h1
			font-size 28px
			