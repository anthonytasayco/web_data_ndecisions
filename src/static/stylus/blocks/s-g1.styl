@media screen and (max-width 1024px)
  .g1-block
    border-bottom 0px
    background c-5
    border 1px solid #fbe4cc
    .g1-imghover
      display none
    .g1-imgprincipal
      display block
    h3
      color c-1
  .g1-linkdetalle
    margin-bottom 20px
    background c-5
    opacity 1
    visibility visible
    transform translateY(7%)
    a
      color c-0
      &:after
        color c-5
        background c-0
@media screen and (max-width 768px)
  .g1-block 
    h3 
      font-size 14px
